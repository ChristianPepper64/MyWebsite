@page
@model MyWebsite_Web.Pages.NavPoperties.ProjectsPageModel
@{
}


<div class="container glass-container my-5 text-white">
    <div class="row gy-5">

        <!-- Left Column -->
        <div class="col-md-6 d-flex flex-column gap-4">

            <!-- Project Name -->
            <div class="glass-box scroll-box" style="height: 400px;">
                <h1 class="display-5 fw-bold text-white-glow">Project Name</h1>
                <p class="lead">This project is the website. Sample text blah blah beep beep neep.</p>
            </div>

            <!-- Attributes -->
            <div class="glass-box scroll-box" style="height: 200px;">
                <h2 class="display-6 fw-bold text-white-glow">Attributes</h2>
                <p class="lead">C#, HTML, CSS</p>
            </div>
        </div>

        <!-- Right Column -->
        <div class="col-md-6 text-center">
            <div class="p-3 glass-box">
                <img src="~/images/Potential Background.jpg"
                     alt="Christian Pepper"
                     class="img-fluid img-glow"
                     style="max-height: 600px;" />
            </div>
            <p class="mt-3 text-uppercase fs-5 text-white-glow" style="letter-spacing: 1px;">This is me — Christian Pepper</p>
        </div>

        <!-- Additional Projects -->
        <div class="col-md-4">
            <div class="glass-box d-flex justify-content-center align-items-center scroll-box">
                <img src="~/images/Potential Background.jpg"
                     alt="Christian Pepper"
                     class="img-fluid img-glow"
                     style="max-height: 300px;" />
            </div>
        </div>

        <div class="col-md-8">
            <div class="glass-box scroll-box">
                <h2 class="display-6 fw-bold text-white-glow">Description</h2>
                <p class="lead">This section highlights the tools and languages used in the project like C#, HTML, and CSS. You could also mention your role and goals here.</p>
            </div>
        </div>

        <div class="col-md-8">
            <div class="glass-box scroll-box">
                <h2 class="display-6 fw-bold text-white-glow">Experience</h2>
                <p class="lead">Another entry — possibly for expanded project description, features, or lessons learned.</p>
            </div>
        </div>

        <div class="col-md-4">
            <div class="glass-box d-flex justify-content-center align-items-center scroll-box">
                <img src="~/images/Potential Background.jpg"
                     alt="Christian Pepper"
                     class="img-fluid img-glow"
                     style="max-height: 300px;" />
            </div>
        </div>
    </div>
</div>
