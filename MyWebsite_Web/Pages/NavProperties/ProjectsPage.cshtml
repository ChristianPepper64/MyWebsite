@page
@model MyWebsite_Web.Pages.NavPoperties.ProjectsPageModel
@{
}

<div class="container glass-container my-5 text-white">
    <div class="row gy-5">
        <!-- Top Section -->
        <div class="col-md-6 d-flex flex-column gap-4">
            <div class="glass-box scroll-box" style="height: 400px;">
                <h1 class="display-5 fw-bold">Home Depot Financial Statement Analysis</h1>
                <p class="lead">An in Depth Analysis of Home Depot.</p>
            </div>
            <div class="glass-box scroll-box" style="height: 200px;">
                <h2 class="display-6 fw-bold">Attributes</h2>
                <p class="lead">Financial Analysis, Financial Accounting, Microsoft Excel</p>
            </div>
        </div>

        <div class="col-md-6 text-center align-content-center">
            <div class="p-3 glass-box align-content-center">
                <img src="~/images/Screenshot 2025-06-13 034355.png"
                     alt="Christian Pepper"
                     class="img-fluid img-glow"
                     style="max-height: 600px;" />
            </div>
            <p class="mt-3 text-uppercase fs-5" style="letter-spacing: 1px;">Home Depot and Lowes Balance Sheet</p>
        </div>

        <!-- Toggle Button -->
        <div class="col-12 text-center mt-4">
            <a class ="btn btn-outline-primary w-100 mb-3 text-start shadow-sm" data-bs-toggle="collapse" href="#additionalProjects" role="button" aria-expanded="false" aria-controls="additionalProjects">
                Show More Details
            </a>
        </div>

        <!-- Collapsible Content -->
        <div class="collapse mt-4" id="additionalProjects">
            <div class="row gy-4">
                <div class="col-md-4">
                    <div class="glass-box d-flex justify-content-center align-items-center scroll-box">
                        <img src="~/images/Potential Background.jpg"
                             alt="Project Thumbnail"
                             class="img-fluid"
                             style="max-height: 300px;" />
                    </div>
                </div>

                <div class="col-md-8">
                    <div class="glass-box scroll-box">
                        <h2 class="display-6 fw-bold ">Description</h2>
                        <p class="lead">This section highlights the tools and languages used in the project like C#, HTML, and CSS.</p>
                    </div>
                </div>

                <div class="col-md-8">
                    <div class="glass-box scroll-box">
                        <h2 class="display-6 fw-bold ">Experience</h2>
                        <p class="lead">Another entry — possibly for expanded project description, features, or lessons learned.</p>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="glass-box d-flex justify-content-center align-items-center scroll-box">
                        <img src="~/images/Potential Background.jpg"
                             alt="Another Image"
                             class="img-fluid"
                             style="max-height: 300px;" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
